@using CalisVita.Components.Shared
@using CalisVita.Context
@using CalisVita.Model
﻿@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject DatabaseContext DbContext
@inject WorkoutProvider WorkoutProdvider
@inject ProtectedSessionStorage ProtectedSessionStore
@inject NavigationManager NavigationManager
@page "/library"




<PageTitle>Library</PageTitle>



@code
{
    private IEnumerable<Workout> workouts;

    [Parameter]
    public Workout Workout { get; set; }

    protected override async Task OnInitializedAsync()
    {
        workouts = await WorkoutProdvider.GetAllWorkoutsAsync();
    }

    private void ShowInfo(Workout workout)
    {
        NavigationManager.NavigateTo($"/WorkoutPath{workout.WorkoutType}");
    }
}