@using CalisVita.Components.Shared
@using CalisVita.Context
@using CalisVita.Model
@inject WorkoutProvider WorkoutProdvider
@page "/"



<PageTitle>Home</PageTitle>

<h1>Hello, world! :)</h1>

@if (workouts is null)
{
    <p>Loading...</p>
}
else if (!workouts.Any())
{
    <p>No cheeses found</p>
}

 <div class="row row-cols-1 row-cols-md-4 g-4">

    <div class="col">
        
    </div>
    }
    </div>

@code
{
    private IEnumerable<Workout> workouts;

    protected override async Task OnInitializedAsync()
    {
        workouts = await WorkoutProdvider.GetAllWorkoutsAsync();
    }
}